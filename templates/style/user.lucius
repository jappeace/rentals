#image-area ~ div .image {
  position: relative;
}
#image-area ~ div .image::after {
  content: "";
  display: block;
  padding-bottom: 100%;
}
#image-area ~ div .image > img {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
